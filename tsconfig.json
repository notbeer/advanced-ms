{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "paths": {
            "@types": ["./@types/index.d.ts"]
        }
    },
    "include": ["@types/**/*", "src/**/*"],
    "exclude": ["node_modules"]
}